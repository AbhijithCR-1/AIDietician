<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    tools:context=".Signup">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bottom_bg_white"
        android:layout_marginTop="150dp">

        <TextView
            android:id="@+id/txtViewSign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="50dp"
            android:text="Sign up account"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="335dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="50dp">


            <EditText
                android:id="@+id/edttxtUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_black"

                android:drawableLeft="@drawable/ic_baseline_person"
                android:hint="Email"
                android:inputType="textPersonName"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black" />


            <EditText
                android:id="@+id/edttxtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edttxtUsername"
                android:layout_marginTop="25dp"
                android:background="@drawable/input_black"
                android:drawableLeft="@drawable/ic_baseline_person"
                android:hint="FullName"
                android:inputType="textPersonName"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black" />

            <EditText
                android:id="@+id/edttxtPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edttxtPassword"
                android:layout_marginTop="25dp"
                android:background="@drawable/input_black"
                android:drawableLeft="@drawable/ic_baseline_phone"
                android:hint="Phone"
                android:inputType="phone"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black" />

            <EditText
                android:id="@+id/edttxtPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edttxtName"
                android:layout_marginTop="25dp"
                android:background="@drawable/input_black"
                android:drawableLeft="@drawable/ic_baseline_security"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black" />

            <EditText
                android:id="@+id/edttxtDOB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edttxtPhone"
                android:layout_marginTop="25dp"
                android:background="@drawable/input_black"
                android:drawableLeft="@drawable/ic_baseline_calendar_month"
                android:hint="Date of Birth"
                android:inputType="date"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black" />

            <Button
                android:id="@+id/btnSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edttxtDOB"
                android:layout_marginTop="25dp"
                android:background="@drawable/btn_bg"
                android:onClick="onBtnNextClick"
                android:shadowColor="@color/teal_700"
                android:text="Signup"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/txtviewAlrady"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnSignUp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:clickable="true"
                android:onClick="onAcntClick"
                android:text="Already have account?"
                android:textColor="@color/black" />

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>