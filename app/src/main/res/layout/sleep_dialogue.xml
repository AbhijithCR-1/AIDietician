<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg_lightblue">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="80dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp">

        <ImageView
            android:id="@+id/imageViewSleep"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/sleep_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sleep"
            android:textSize="40dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/sleepTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sleep time : "
            android:textSize="20dp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/timesleep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter time"
            android:inputType="time"
            android:textSize="20dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/wakeTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wake time : "
            android:textSize="20dp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/timewake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter time"
            android:inputType="time"
            android:textSize="20dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ok"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="80dp"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>